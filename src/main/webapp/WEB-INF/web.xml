<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>project-server</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- JSP Config -->
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/taglib.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>


	<!-- Servlet Mapping -->
	<servlet>
		<servlet-name>UserServiceServlet</servlet-name>
		<servlet-class>user.controller.ServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServiceServlet</servlet-name>
		<url-pattern>/user/service</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateBabyAction</servlet-name>
		<servlet-class>baby.controller.CreateBabyAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateBabyAction</servlet-name>
		<url-pattern>/addBaby</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CommunityServiceServlet</servlet-name>
		<servlet-class>community.controller.CommunityServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommunityServiceServlet</servlet-name>
		<url-pattern>/community/service</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DiaryServiceServlet</servlet-name>
		<servlet-class>diary.controller.DiaryServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DiaryServiceServlet</servlet-name>
		<url-pattern>/diary/service</url-pattern>
	</servlet-mapping>

	<!-- Error Page -->
	<servlet>
		<servlet-name>error</servlet-name>
		<jsp-file>/error.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>

	<error-page>
		<location>/error</location>
	</error-page>


	<!-- JSP files mapping -->
	<servlet>
		<servlet-name>header</servlet-name>
		<jsp-file>/views/module/header.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>header</servlet-name>
		<url-pattern>/header</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>footer</servlet-name>
		<jsp-file>/views/module/footer.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>footer</servlet-name>
		<url-pattern>/footer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>join</servlet-name>
		<jsp-file>/views/user/joinForm.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>join</servlet-name>
		<url-pattern>/join</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>joinPro</servlet-name>
		<jsp-file>/views/user/joinFormPro.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>joinPro</servlet-name>
		<url-pattern>/joinPro</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/views/user/loginForm.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>loginPro</servlet-name>
		<jsp-file>/views/user/loginFormPro.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginPro</servlet-name>
		<url-pattern>/loginPro</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<jsp-file>/views/user/logoutForm.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logoutPro</servlet-name>
		<jsp-file>/views/user/logoutFormPro.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoutPro</servlet-name>
		<url-pattern>/logoutPro</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>updateUser</servlet-name>
		<jsp-file>/views/user/updateUser.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateUser</servlet-name>
		<url-pattern>/updateUser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>deleteUser</servlet-name>
		<jsp-file>/views/user/deleteUser.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteUser</servlet-name>
		<url-pattern>/deleteUser</url-pattern>
	</servlet-mapping>
</web-app>